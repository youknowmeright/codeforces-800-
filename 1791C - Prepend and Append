#include<iostream>
using namespace std;

int main()
{
    int x;
    cin>>x;
    while(x--)
    {
        int n;
          int sum=0;
        cin>>n;
        string arr;
      
        cin>>arr;
        for(int i=0;i<n/2;i++){
            if((arr[i]==arr[(n-i)-1])){
                break;
            }
            sum+=2;

        }
        cout<<n-sum<<endl;
    }

}



